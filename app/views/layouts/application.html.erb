<!DOCTYPE html>
<html>
<head>
  <title>MakeSandwich</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render partial: "shared/navbar" %>
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
        <%= value %>
        <a class="close" data-dismiss="alert">&#215;</a>
      </div>
    <% end %>
    <%= yield %>

    <% if user_signed_in? %>
      <%= render partial: "shared/new_quote_modal", locals: { new_quote: Quote.new } %>
      <%= render partial: "shared/new_sandwich_modal", locals: { new_sandwich: Sandwich.new } %>
    <% end %>
  </div>

</body>
</html>
