<div class="row">
  <% @sandwiches.each do |sandwich| %>
    <div class="span3 well">
      <h3><%= sandwich.name %></h3>
      <p><%= sandwich.description %></p>
      <p><%= link_to "Order this sandwich", orders_path(order: { sandwich_id: sandwich.id }), class: "btn btn-success",method: :post %></p>
    </div>
  <% end %>
</div>