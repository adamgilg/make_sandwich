<% if current_user == @user %>
  <% if @user.orders.size > 0 %>
    <div id="user-welcome">
      <p>Hey there, <%= @user.email %>.</p>
      <p>Here's your order history:</p>
    </div>

    <div class="row">
      <% @user.orders.each do |order| %>
        <div class="span3 well">
          <p><%= order.sandwich.name %></p>
          <p><%= order.sandwich.description %></p>
          <p><em>ordered <%= time_ago_in_words(order.created_at) %> ago<em></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <div id="empty-order-haiku">
      <p>Order something first,</p>
      <p>then back here for more wisdom.</p>
      <p>This page: knowledge, truth.</p>
    </div>
  <% end %>
<% else %>
  <h3>This ain't your page. Git gone!</h3>
<% end %>