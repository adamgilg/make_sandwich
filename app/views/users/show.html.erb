<% if current_user == @user %>
  <% if @order %>
    <div id="user-welcome">
      <p>Hey there, <%= @user.email %>.</p>
      <p>Here's your order history:</p>
    </div>

    <div class="row">
      <% @user.orders.each do |order| %>
        <div class="span3 well">
          <%= order.sandwich.name %>
          <%= order.sandwich.description %>
          <%= order.created_at %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div id="empty-order-haiku">
      <p>Order something first,</p>
      <p>then back here for more wisdom.</p>
      <p>This page: knowledge, truth.</p>
    </div>
  <% end %>
<% else %>
  <h3>This ain't your page. Go away!</h3>
<% end %>